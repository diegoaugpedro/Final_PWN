<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trabalho Final NodeJS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/admin.css">
    <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet">

</head>
<body>

    <div class="container">

        <h1>Ol√°, {{id}}!</h1>

        <div id="listas">

            <h3>LISTAS CRIADAS:</h3>

            {{#each list}}

            <div class="lista">
                <h4>Nome: {{listName}}</h4>

                <div class="options">
                    <a href="/admin/{{username}}/list/{{id}}">Ver lista</a>
                    <a href="/admin/{{username}}/list/{{id}}/delete">Deletar Lista</a>
                    <form class="renomear-lista" action="/admin/{{username}}/list/{{id}}/rename" method="POST">
                        <div>
                            <input class="renomear" type="text" name="newListName" id="newListName" required>
                        </div>
                        <button class="salvar" type="submit">Renomear lista</button>
                    </form>
                </div>
            </div>
            {{/each}}

        </div>

        <script type="text/javascript">
          function criarlista(){
              document.getElementById("criar-lista").style.display= "block"
          }
        
        </script>

        <div id="criar-lista">

            <script type='text/javascript'>
                function adicionar(){
                var input = document.createElement("INPUT")
                var att = document.createAttribute("type");  
                var att2 = document.createAttribute("name");     
                att.value = "text";  
                att2.value = "tasks";  
                input.setAttributeNode(att);
                input.setAttributeNode(att2);       
                document.getElementById("formulario").appendChild(input)
                }
            </script>

            <h3 id="nova">Nova Lista</h3>

            <button id="add" class="adicionar" onclick="adicionar()">Adicionar tarefa</button>


            <form action="/admin/{{id}}" method="POST">
                <div class="field">
                    <label for="listName">Nome da lista:</label>
                    <input type="text" name="listName" id="listName" required>
                </div>
                <div id="formulario" class="field">
                    <label for="tasks">Tarefas:</label>
                    <input type="text" name="tasks">
                </div>

                <button type="submit">Salvar</button>
            </form>

        </div>


        <br><br>

        <button onclick="criarlista()">Criar nova lista</button>

        <a href="/logout">Logout</a>

    </div>


    <!-- Bootstrap -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    
</body>
</html>







